{
  "name": "@linzjs/stac",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "lint": "npx eslint . --fix && yarn format:markdown",
    "format:markdown": "npx prettier **/*.md --write",
    "validate": "./validate.sh extensions/*/examples/*.json",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && yarn format:markdown && git add CHANGELOG.md",
    "version-schema": "sed -i \"s/_STAC_VERSION_/v$npm_package_version/\" extensions/**/*.*"
  },
  "devDependencies": {
    "@linzjs/style": "^3.1.1",
    "conventional-changelog-cli": "^2.1.1",
    "stac-node-validator": "^1.0.0"
  }
}
