{
  "name": "@linzjs/stac",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "lint": "npx eslint extensions --fix",
    "validate": "./validate.sh extensions/*/examples/*.json",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && npm run version-schema && git add CHANGELOG.md extensions",
    "version-schema": "sed -i \"s/__STAC_VERSION__/$npm_package_version/\" extensions/**/*.*"
  },
  "devDependencies": {
    "@linzjs/style": "^3.1.1",
    "stac-node-validator": "^1.0.0"
  },
  "prettier": {
    "printWidth": 80,
    "proseWrap": "always"
  }
}
